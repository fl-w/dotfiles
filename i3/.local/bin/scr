#!/usr/bin/env sh

# scrot "$@" ~/Pictures/Screenshots/Screenshot_%Y%m%d_%H%M%S.png -e 'notify-send "Screenshot saved as $n"'

: "${SCR_DIR:=$HOME/Pictures/screenshots}"
: "${SCR_PREFIX:=scr}"

tmp=`mktemp --suffix .png`
trap "rm $tmp 2>/dev/null" EXIT

set -o pipefail
maim -u $tmp "$@" 2> /dev/null | xclip -selection clipboard -t image/png || exit 1

while true; do
  scr_name="$(rofi -dmenu -location 2 -yoffset 30 -width 200 -p "Screenshot name" -mesg "$err")"
  if [[ $? != 0 ]]; then exit 1; fi

  scr_name="${scr_name:-"${SCR_PREFIX}_$(date +%y%m%d_%H%M%S)"}.png"
  if test -f $SCR_DIR/$scr_name; then err="There is a screenshot with that name already";
  else
    mv $tmp $SCR_DIR/$scr_name && printf $SCR_DIR/$scr_name && \
      notify-send "Screenshot saved as $SCR_DIR/$scr_name"
    break
  fi
done
