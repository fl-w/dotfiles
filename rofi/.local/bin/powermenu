#!/bin/bash

if [ $# -eq 0 ]
then
            options="î¦‡ Lock|î¦‰ Logout|î¦µ Shutdown|î¦½ Reboot|ðŸ”’ Hibernate"
            ROFI_CMD="$(rofi -sep "|" -dmenu -i -p 'Power' -width 9 -hide-scrollbar -line-padding 4 -padding 20 -columns 5 -lines 1 <<< "$options")"
else
            ROFI_CMD=$1
fi

case "$ROFI_CMD" in
*Lock)
    "$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"/lock-screen
    ;;
*Logout)
    i3-msg exit
    ;;
*Shutdown)
   shutdown now
    ;;
*Reboot)
    reboot
    ;;
*Hibernate)
    systemctl hibernate
    ;;
esac
