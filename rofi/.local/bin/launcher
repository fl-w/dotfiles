#!/bin/bash

if [ $# -eq 0 ]
  then
    rofi -modi drun,run -show drun -line-padding 4 -lines 6 -location 0 \
      -columns 2 -width 50 -padding 30 -hide-scrollbar \
      # -show-icons #  -sidebar-mode
    elif [ "$1" = "-f" ]; then
      rofi -show run -hide-scrollbar -lines 3 -line-margin 15 -show-icons \
        -padding 400 -columns 3 -bw 0 -eh 2 -auto-select -show-icons -fullscreen
    else
      echo "syntax: launcher [-f]"
fi
